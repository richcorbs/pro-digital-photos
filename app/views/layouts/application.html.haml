%html
  %head
    %title= title
    %meta{:name => 'keywords', :content => keywords}
    %meta{:name => 'description', :content => description}
    %link{:rel => 'shortcut icon', :href => '/favicon.ico'}
    = stylesheet_link_tag 'screen.css', :media => 'screen, projection'
    = javascript_include_tag %w(jquery jquery_ujs jquery-ui tipsy fancybox application)
    = csrf_meta_tag

  %body
    #wrapper
      - if logged_in?
        = link_to 'Logout', logout_path, :method => :delete, :class => "float-right"
      #inner-wrapper
        / logo
        = link_to '', root_path, :id => 'logo', :title => 'Pro Digital Photos'
        = render 'layouts/main_nav'

        #content
          - flash.each do |flash_name, value|
            %div{:class => 'flash', :id => flash_name}!= value

          / content
          = yield
          / / content
